{
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noEmitOnError": true,
        "noImplicitReturns": true,
        "sourceMap": true,
        "declarationMap": true,
        "strict": true,
        "declaration": true,
        "noEmitHelpers": false,
        "types": [ "node", "jest" ],
        "lib": [ "es2020" ],
        "newLine": "LF",
        "allowJs": true,
        "outDir": "dist",
    },
    "include": [ 
        "./**/*.ts", 
    ],
    "exclude": [
        "dist/**/*",
        "node_modules",
        "**/*.d.ts"
    ]
}
